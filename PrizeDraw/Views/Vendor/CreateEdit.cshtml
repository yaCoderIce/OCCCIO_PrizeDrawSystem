@using PrizeDraw.DataLayer.Model
@model VendorCreateEditViewModel

<h4>Vendor</h4>
<hr />
<div class="row">
    <div class="col-md-8 offset-lg-2 text-left">
        <form asp-action="@ViewContext.RouteData.Values["action"]" asp-controller="Vendor" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <span asp-validation-for="Name" class="text-danger"></span>
                <input asp-for="Name" class="form-control" placeholder="Vendor Name" aria-label="Vendor Name" />
            </div>
            <div class="form-group">
                <label asp-for="Logo"></label>
                <input asp-for="Logo" type="file" accept="image/*" />
                <span asp-validation-for="Logo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
