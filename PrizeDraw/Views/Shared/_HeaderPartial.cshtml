@using Microsoft.AspNetCore.Identity
@using PrizeDraw.Models
@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager

<header id="header" class="row bg-darkgrey">
    <div class="col-lg-8">
        <img src="~/img/logo-horizontal.png" />
    </div>
    <div id="loginHeader" class="col-lg-4">
        @if (SignInManager.IsSignedIn(User))
        {
            <a id="loggedInLink" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Logged in as @UserManager.GetUserName(User)</a>
            <form id="logoutForm" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button id="logout" type="submit" class="btn-link">Logout</button>
            </form>
        }
        else
        {
            <a id="login" asp-area="Identity" asp-page="/Account/Login">Login</a>
        }
    </div>
</header>
